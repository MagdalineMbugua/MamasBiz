<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.userInterface.fragments.CustomerFragment"
    android:orientation="vertical">
<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"/>
</com.google.android.material.appbar.AppBarLayout>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/mb_empty_state"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="8dp"
    android:contentDescription="@string/splash"
    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etSearch"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/search"
        android:fontFamily="@font/cormorantsc_regular"
        android:drawableEnd="@drawable/ic_outline_search_24"
        android:background="@drawable/grey_rounded_corner"
        android:padding="8dp"
        android:inputType="textFilter"
        android:autofillHints="null"
        android:visibility="gone"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/progressbar"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sad"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:id="@+id/ivUserNotFound"
        android:contentDescription="@string/splash"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_not_found"
        android:fontFamily="@font/cormorantsc_medium"
        android:textColor="@color/colorDarkFont"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/tvUserNotFound"
        android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/consumerRecyclerView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        tools:listitem="@layout/customer_cardview"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_records"
        android:fontFamily="@font/cormorantsc_medium"
        android:textColor="@color/colorDarkFont"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/tvRecords"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/consumer_empty_state"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/splash"
        android:visibility="gone"
        android:id="@+id/ivSplashImage"
        />
   <View
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_debt"
        android:fontFamily="@font/cormorantsc_medium"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        android:id="@+id/tvCreateDebt"/>






</LinearLayout>