<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.userInterface.fragments.HomeFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/foreground">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:id="@+id/ivLogoHolder"
                android:contentDescription="@string/app_name"
                android:src="@drawable/foreground"
                android:scaleType="centerCrop"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_minus50sdp"
                android:layout_marginStart="@dimen/_44sdp"
                android:layout_marginEnd="@dimen/_44sdp"
                android:requiresFadingEdge="vertical"
                app:cardElevation="8dp"
                app:cardCornerRadius="16dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/tvTotalPayment"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="16sp"
                        android:fontFamily="@font/cormorantsc_bold"
                        android:textStyle="bold"
                        android:textColor="@color/colorDarkFont"
                        tools:text="@string/app_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvCustomer"
                        android:text="@string/customer"
                        app:layout_constraintTop_toBottomOf="@id/tvTotalPayment"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="20sp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/cormorantsc_bold"
                        android:textStyle="bold"
                        android:textColor="@color/colorDarkFont"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvSupplier"
                        android:text="@string/supplier"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTotalPayment"
                        android:textSize="20sp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:fontFamily="@font/cormorantsc_bold"
                        android:textStyle="bold"
                        android:textColor="@color/colorDarkFont"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvTotalCustomerPayment"
                        app:layout_constraintTop_toBottomOf="@id/tvCustomer"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="32sp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:fontFamily="@font/arial_bold"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        tools:text="@string/app_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvTotalSupplierPayment"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSupplier"
                        android:textSize="32sp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:fontFamily="@font/arial_bold"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        tools:text="@string/app_name"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btCreateCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@drawable/orange_rounded_rectangle"
                android:drawableStart="@drawable/money"
                android:fontFamily="@font/cormorantsc_semibold"
                android:padding="16dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@string/create_credit"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textSize="28sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:padding="16dp"
                android:id="@+id/btCreateDebt"
                android:background="@drawable/orange_rounded_rectangle"
                android:text="@string/create_debt"
                android:textColor="@color/colorPrimary"
                android:textSize="28sp"
                android:fontFamily="@font/cormorantsc_semibold"
                android:drawableStart="@drawable/debt_money"
                android:textAlignment="textEnd"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>